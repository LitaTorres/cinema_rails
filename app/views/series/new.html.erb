<div class="container">
    <div class="row">
        <div class="col-4">
            <h1> Completa el formulario para Series</h1>

            <%= form_with url:'/series/create', model: @serie, method: :post do |form| %>
            <div class="form-group mb-3">
                <%= form.label :name, "Nombre de la serie", class: "form-label" %> <br>
                <%= form.text_field :name, name: "serie[name]" %> <br>
            </div>
            <div class="form-group mb-3">
                <%= form.label :synopsis, "Escribe una pequeÃ±a sinopsis de la serie", class: "form-label" %> <br>
                <%= form.text_area :synopsis, name: "serie[synopsis]", rows: 5, cols:40 %> <br>
            </div>
            <div class="form-group mb-3">
                <%= form.label :director, "Mencional al o los directores de la serie", class: "form-label" %> <br>
                <%= form.text_field :director, name: "serie[director]" %> <br>
            </div>
            <div class="form-group mb-3">
                <%= form.submit "Enviar", class: "btn btn-primary" %> <br>
            </div>
        <% end %>
        </div>
        <div class="col-8">
        <%= image_tag '2.jpeg', class: "img-fluid", alt:"imagenseries", style: "width: 1000px; height:600px; object-fit:cover; margin-bottom:40px; " %>
        </div>
    </div>
</div>